{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": [],
    "lib": ["es2017", "es2020.bigint"],
    "strictPropertyInitialization": false,
    "paths": {
      "@unique-nft/sdk/*": ["packages/sdk/*"],
      "@unique-nft/sdk": ["packages/sdk/src/index.ts"]
    },
    "module": "ESNext"
  },
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
