{
  "root": "packages/sdk",
  "sourceRoot": "packages/sdk/src",
  "targets": {
    "build": {
      "executor": "./tools/executors/lib-builder:run-build",
      "options": {
        "packageName": "sdk",
        "distDir": "./dist/packages/sdk",
        "entryPoints": [
          "./index.ts",
          "./extrinsics/index.ts",
          "./balance/index.ts",
          "./state-queries/index.ts",
          "./tokens/index.ts",
          "./fungible/index.ts",
          "./utils/index.ts",
          "./types/index.ts",
          "./errors/index.ts"
        ],
        "ignorePatterns": ["@nestjs/", "@unique-nft/accounts"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/sdk/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/sdk"],
      "options": {
        "jestConfig": "packages/sdk/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
