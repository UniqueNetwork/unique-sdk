{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"],
    "allowJs": true,
    "target": "ES2020",
    "paths": {
      "@unique-nft/sdk/*": ["packages/sdk/*"],
      "@unique-nft/sdk": ["packages/sdk/index.ts"],
      "@unique-nft/accounts/*": ["packages/accounts/*"],
      "@unique-nft/accounts": ["packages/accounts/index.ts"]
    }
  },
  "include": ["**/*.test.ts", "**/*.spec.ts", "**/*.d.ts", "**/*.ts"]
}
