{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "paths": {
      "@unique-nft/sdk/*": ["packages/sdk/*"],
      "@unique-nft/sdk": ["packages/sdk/index.ts"],
      "@unique-nft/account/*": ["packages/account/*"],
      "@unique-nft/account": ["packages/account/index.ts"]
    }
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
